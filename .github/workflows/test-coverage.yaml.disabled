name: Test and Coverage

on:
  push:
    branches: [ main, master ]   # adjust to your default branch
  pull_request:

jobs:
  test-and-coverage:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up R
        uses: r-lib/actions/setup-r@v2

      # Cache R packages between runs
      - name: Cache R packages
        uses: actions/cache@v4
        with:
          path: ~/.cache/R
          key: ${{ runner.os }}-r-${{ hashFiles('**/DESCRIPTION') }}
          restore-keys: ${{ runner.os }}-r-

      # Install dependencies (DESCRIPTION + extras)
      - name: Install dependencies
        uses: r-lib/actions/setup-r-dependencies@v2
        with:
          extra-packages: testthat,covr

      # Debug: show current path and files
      - name: Show working directory
        run: |
          pwd
          ls -l

      # Run coverage on the source tree BEFORE build/check
      - name: Run coverage and upload to Codecov
        env:
          CODECOV_TOKEN: ${{ secrets.CODECOV_TOKEN }}
        run: |
          Rscript -e 'cov <- covr::package_coverage(path=".", type="tests"); covr::codecov(cov)'

      # Build package
      - name: Build package
        run: R CMD build .

      # Run R CMD check (tests + validation)
      - name: Check package
        run: R CMD check *.tar.gz --no-manual
